# ============================================================================
# PLASTIXTHINKER ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3000

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# SESSION SECURITY
# ============================================================================
# Generate a strong random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_very_long_random_session_secret_here

# ============================================================================
# DATABASE PATHS (optional - defaults will be used if not specified)
# ============================================================================
USERS_DB_PATH=users.sqlite
SESSIONS_DB_PATH=sessions.sqlite

# ============================================================================
# GOOGLE OAUTH (optional - uncomment and configure if using Google login)
# ============================================================================
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================================================
# SECURITY SETTINGS (optional - defaults will be used if not specified)
# ============================================================================
# Rate limiting: requests per 15-minute window
RATE_LIMIT_MAX=100
# Rate limiting window in milliseconds
RATE_LIMIT_WINDOW=900000

# ============================================================================
# FILE UPLOAD SETTINGS (optional - defaults will be used if not specified)
# ============================================================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760
# Upload directory
UPLOAD_DIR=uploads

# ============================================================================
# CORS SETTINGS (optional - defaults will be used if not specified)
# ============================================================================
# Comma-separated list of allowed origins for production
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
